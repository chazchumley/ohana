{{ attach_library('ohana/region')}}

<section class="l-{{ region_name ?: 'region' }}">
  {% if constrain %}
    <div class="{{ constrain }}">
  {% endif %}

  {% block content %}
    {{ content|default('<div><p style="border: 1px dashed #333; color:#333; padding:1rem; margin:0;">Region Content</p></div>') }}
  {% endblock %}

  {% if constrain %}
    </div>
  {% endif %}
</section>
