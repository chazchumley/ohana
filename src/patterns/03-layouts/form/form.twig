{{ attach_library('ohana/form') }}

{% set classes = [
  'l-form',
  modifier ? modifier,
  attributes ? attributes.class
]|join(' ')|trim %}

<form class="{{ classes }}" {{ attributes ? attributes|without('class') }}>
  {% if constrain %}
    <div class="{{ constrain }}">
  {% endif %}

  {% block content %}
    {{ content|default('<div><p style="border: 1px dashed #333; color:#333; padding:1rem; margin:0;">Form Content</p></div>') }}
  {% endblock %}

  {% if constrain %}
    </div>
  {% endif %}
</form>
