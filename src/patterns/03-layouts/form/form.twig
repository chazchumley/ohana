{{ attach_library('ohana/form') }}

{% set classes = [
  'l-form',
  modifier ? modifier : '',
  attributes ? attributes.class
]|join(' ')|trim %}

<form class="{{ classes }}" {{ attributes ? attributes|without('class') }}>
  {% if constrain %}
    <div class="{{ constrain }}">
  {% endif %}

  {% block content %}
    {{ content|default('<p style="border: var(--border-size-1) dashed var(--gray-3); color: var(--gray-6); padding: 1rem; max-inline-size: 100%; margin: 0;">Form Content</p>') }}
  {% endblock %}

  {% if constrain %}
    </div>
  {% endif %}
</form>
